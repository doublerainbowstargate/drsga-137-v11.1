{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DRSGA-137 v11.1 Schema",
  "type": "object",
  "required": ["id", "version", "canonical_source", "principles"],
  "properties": {
    "id": { "type": "string" },
    "version": { "type": "string" },
    "non_executable": { "type": "boolean" },
    "exit_always_allowed": { "type": "boolean" },

    "canonical_source": {
      "type": "object",
      "required": ["url", "integrity"],
      "properties": {
        "url": { "type": "string", "format": "uri" },
        "integrity": {
          "type": "object",
          "properties": {
            "hash_algorithm": { "type": "string" },
            "hash": { "type": "string" }
          }
        }
      }
    },

    "principles": {
      "type": "object",
      "required": ["ug0", "baseline", "infinity"],
      "properties": {
        "ug0": {
          "type": "object",
          "properties": {
            "body_first": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "baseline": {
          "type": "object",
          "properties": {
            "value": { "type": "number" }
          }
        }
      }
    }
  }
}
